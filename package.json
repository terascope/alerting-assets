{
    "name": "alerting-assets",
    "version": "1.0.0",
    "description": "Teraslice processors to enable alert generation from JSON document streams",
    "publishConfig": {
        "access": "public"
    },
    "srcMain": "src/index.ts",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "lint": "tslint --project tsconfig.json --format verbose",
        "preinstall": "yarn --cwd ./asset install",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "npm run build",
        "build": "tsc --project tsconfig.build.json --pretty",
        "build:watch": "npm run build --watch",
        "test": "jest",
        "test:watch": "jest --coverage=false --notify --watch --onlyChanged",
        "test:debug": "env DEBUG='*teraslice*' jest --detectOpenHandles --coverage=false --runInBand"
    },
    "repository": "git@github.com:terascope/typescript-project-template.git",
    "author": "Terascope, LLC <info@terascope.io>",
    "license": "MIT",
    "devDependencies": {
        "@terascope/teraslice-op-test-harness": "^1.4.3",
        "@types/jest": "^23.3.7",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.12",
        "jest": "^23.6.0",
        "jest-extended": "^0.11.0",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "typescript": "^3.2.1"
    },
    "engines": {
        "node": ">=8.0.0"
    }
}
